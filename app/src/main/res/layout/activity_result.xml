<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_Purple">

    <!-- Main CardView Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/kanji_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/bg_DarkCardPurple"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nav_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="24dp">

        <!-- Linear Layout Inside Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <!-- Kana + Kanji Block -->
            <FrameLayout
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp">

                <View
                    android:id="@+id/kanji_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_bg_rect"
                    android:elevation="0dp"/>

                <TextView
                    android:id="@+id/main_kana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_gravity="top|center_horizontal"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingExtra="4dp"
                    android:textAlignment="center"
                    android:paddingHorizontal="8dp"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="14sp"
                    app:autoSizeMaxTextSize="24sp"
                    app:autoSizeStepGranularity="2sp"
                    />

                <TextView
                    android:id="@+id/main_kanji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="50sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:text="写真"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:breakStrategy="simple"
                    android:textAlignment="center"
                    android:paddingHorizontal="8dp"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="28sp"
                    app:autoSizeMaxTextSize="50sp"
                    app:autoSizeStepGranularity="2sp" />
            </FrameLayout>

            <!-- Main Definition -->
            <TextView
                android:id="@+id/english_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="Definition: Main meaning"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="22dp"
                android:background="@drawable/round_bg_rect" />

            <!-- Scrollable More Meanings -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/meaning_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@android:color/white"
                        android:textAlignment="center"
                        android:paddingHorizontal="8dp"
                        android:paddingBottom="16dp"/>
                </LinearLayout>
            </ScrollView>

            <!-- Button Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="24dp">

                <ImageButton
                    android:id="@+id/save_wrd_btn"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/circle_btn"
                    android:src="@drawable/card_add_fav_unchecked"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:contentDescription="Add to favorites"/>

                <ImageButton
                    android:id="@+id/play_audio_button"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/circle_btn"
                    android:src="@drawable/card_play"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:contentDescription="Play audio"/>

                <ImageButton
                    android:id="@+id/extra_button_2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/circle_btn"
                    android:src="@drawable/card_remove"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:contentDescription="Close"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Nav Bar Include -->
    <include
        layout="@layout/nav_bar"
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>