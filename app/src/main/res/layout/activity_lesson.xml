<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_Purple"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header / Lesson title-->
    <include
        layout="@layout/roadmap_header"
        android:id="@+id/rm_header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Kana Content Section -->
    <LinearLayout
        android:id="@+id/kana_content_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/rm_header_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <!-- Kana Type Header -->
        <TextView
            android:id="@+id/kana_type_header"
            android:layout_width="136dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/rounded_header_bg"
            android:padding="3dp"
            android:text="HIRAGANA"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <!-- Scrollable Kana Grid -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:fillViewport="true">

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/kana_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:paddingVertical="8dp"
                app:alignItems="center"
                app:flexWrap="wrap"
                app:justifyContent="center" />

        </ScrollView>

    </LinearLayout>

    <!-- Fixed Activities Section -->
    <LinearLayout
        android:id="@+id/activities_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/nav_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Activities Header -->
        <TextView
            android:layout_width="136dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_header_bg"
            android:padding="3dp"
            android:text="ACTIVITIES"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <!-- Activities Buttons/Icons -->
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/activities_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            app:flexWrap="wrap"
            app:justifyContent="center" />

    </LinearLayout>

    <include
        layout="@layout/nav_bar"
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>