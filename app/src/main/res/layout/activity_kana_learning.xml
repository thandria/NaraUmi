<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_Purple"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- Header -->
    <include
        layout="@layout/roadmap_header"
        android:id="@+id/rm_header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Main Kana Card -->
    <LinearLayout
        android:id="@+id/learning_card"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        android:clipToOutline="true"
        android:background="@drawable/rounded_square"
        app:layout_constraintTop_toBottomOf="@id/rm_header_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/kana_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="こんにちは"
            android:textSize="42sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textAlignment="center"
            android:lineSpacingExtra="4dp"
            android:minHeight="80dp"
            android:maxHeight="160dp" />

        <TextView
            android:id="@+id/kana_meaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meaning: Hello"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="4dp"
            android:textAlignment="center"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/kana_romaji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="konnichiwa"
            android:textSize="16sp"
            android:textColor="#E0C6FF"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="italic"/>
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/learning_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_prev"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="100dp"
            android:background="@drawable/circle_btn"
            android:src="@drawable/card_prev"
            android:scaleType="centerInside"
            />
        <ImageButton
            android:id="@+id/btn_sound"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="35dp"
            android:background="@drawable/circle_btn"
        android:src="@drawable/card_play"
        android:scaleType="centerInside"
        />

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/circle_btn"
            android:src="@drawable/card_next"
            android:scaleType="centerInside"/>
    </LinearLayout>

    <!-- Bottom Nav -->
    <include
        layout="@layout/nav_bar"
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>