<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/float_nav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/app_nav"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginBottom="16dp">

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            />


        <ImageView
            android:id="@+id/nav_app_scan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/nav_app_scan"
            android:scaleType="fitCenter"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <ImageView
            android:id="@+id/nav_app_rmap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/nav_app_rmap"
            android:scaleType="fitCenter"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/nav_app_decks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:src="@drawable/nav_app_decks"
            android:scaleType="fitCenter"/>

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            />












    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>