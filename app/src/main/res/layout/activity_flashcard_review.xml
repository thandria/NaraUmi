<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_Purple">

    <include
        layout="@layout/roadmap_header"
        android:id="@+id/review_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/card_view"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:background="@drawable/card_view_bg"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/review_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/flashcard_front"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Front"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/flashcard_hiragana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hiragana"
            android:textSize="24sp"
            android:textColor="#C8B5FF"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textStyle="normal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/flashcard_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/flashcard_romaji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="romaji"
            android:textSize="16sp"
            android:textColor="#E0C6FF"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textStyle="italic"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Reveal and Romaji Toggle Row -->
    <LinearLayout
        android:id="@+id/reveal_romaji_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btn_reveal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reveal"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_header_bg"
            android:layout_marginEnd="8dp"
            android:padding="12dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/btn_toggle_romaji"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Show Romaji"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_header_bg"
            android:layout_marginStart="8dp"
            android:padding="12dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Horizontal pair: Mark as Learned + Don't Know -->
    <TextView
        android:id="@+id/btn_mark_learned"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mark as Learned"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_header_bg"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="4dp"
        android:padding="12dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/reveal_romaji_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_dont_know"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/btn_dont_know"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Don't Know"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_header_bg"
        android:layout_marginTop="12dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="12dp"
        android:padding="12dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/reveal_romaji_row"
        app:layout_constraintStart_toEndOf="@id/btn_mark_learned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/btn_prev"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Previous Card"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_square_purple"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginBottom="12dp"
        android:padding="12dp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btn_dont_know"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/btn_finish"
        android:text="Finish Session"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_square"
        android:layout_marginBottom="12dp"
        android:padding="12dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btn_dont_know"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <include
        layout="@layout/nav_bar"
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>