<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <!-- Header Background -->
    <View
        android:id="@+id/header_background"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/rounded_header_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Streak Badge -->
    <LinearLayout
        android:id="@+id/streak_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/rounded_white_rect"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/header_background"
        app:layout_constraintTop_toTopOf="@id/header_background"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/streak_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/rmap_streak" />

        <TextView
            android:id="@+id/streak_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:maxLines="1"
            android:text="9"
            android:textColor="#A55EFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Header Title with auto-resizing -->
    <TextView
        android:id="@+id/header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ROADMAP"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLines="2"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="24sp"
        android:autoSizeMaxTextSize="28sp"

        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintBottom_toBottomOf="@id/header_background"
        app:layout_constraintTop_toTopOf="@id/header_background"
        app:layout_constraintStart_toEndOf="@id/streak_badge"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>